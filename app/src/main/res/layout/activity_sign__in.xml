<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.beanmeapp.beanme.login.Sign_In">

    <TextView
        android:id="@+id/logoOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bean"
        android:textColor="#bc8539"
        android:textSize="55dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="-10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Me! "
        android:id="@+id/logoTwo"
        android:textColor="#FFF"
        android:textSize="50dp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="27dp"
        android:layout_alignBottom="@+id/logoOne"
        android:layout_toRightOf="@+id/logoOne"
        android:layout_toEndOf="@+id/logoOne" />

    <EditText
        android:id="@+id/email_address_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Username"
        android:ems="10"
        android:gravity="center"
        android:padding="10dp"
        android:textColorHint="#ddbb7e"
        android:textColor="#ddbb7e"
        android:layout_marginTop="40dp"
        android:editable="true"
        android:layout_below="@+id/logoTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ellipsize="start"
        />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:ems="10"
        android:gravity="center"
        android:padding="10dp"
        android:textColorHint="#ddbb7e"
        android:textColor="#ddbb7e"
        android:id="@+id/password_input"
        android:editable="true"
        android:layout_below="@+id/email_address_input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:ellipsize="start"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:background="#271b0b"
        android:padding="10dp"
        android:id="@+id/sign_in_btn"
        android:textColor="#ddbb7e"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/password_input"
        android:layout_alignEnd="@+id/password_input"
        android:layout_below="@+id/password_input"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"/>

    <Button
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:background="#271b0b"
        android:id="@+id/sign_up_btn"
        android:textColor="#ddbb7e"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:height="1dp"
        android:minWidth="250dp"
        android:background="#ddbb7e"
        android:id="@+id/textView"
        android:layout_below="@+id/email_address_input"
        android:layout_alignRight="@+id/sign_in_btn"
        android:layout_alignEnd="@+id/sign_in_btn"
        android:layout_alignLeft="@+id/sign_in_btn"
        android:layout_alignStart="@+id/sign_in_btn" />


</RelativeLayout>
